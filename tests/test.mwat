;; block
{@
$.X = 0x1;
$.Y = 2;
$.Z = 0x3;
}

;; code
(module
  (export "test" (func $test))
  (memory $memory 1)
  (export "memory" (memory $memory))
  {@include './test_inc.mwat'}
  (func $test (result i32)
    i32.const @X;; comment
    i32.const {$ $.X + $.Y }
    i32.add
    {
      // JSによるWASMソースコード生成
      let instructions = '';
      for(let i = 0;i < 4; ++ i ){
        ++$.X; 
        instructions += `
i32.const ${$.X + $.Y}
i32.add`;
      }
      return instructions;
    }
  )
)
